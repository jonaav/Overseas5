<!-- Modal -->
<div class="modal fade" id="horasDocenteModal" tabindex="-1" role="dialog" aria-labelledby="horasDocenteLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="horasDocenteLabel">Horas del Docente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row mt-2">
                    <div class="col">
                        <div class="form-group">
                            <label>Periodo: </label>
                            <input id="txtMesAño" type="month" class="form-control-sm" />
                            <button onclick="ContarHorasDocentePorMes()" class="btn btn-info">Buscar</button>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col">
                        <div class="form-group form-check-inline">
                            <label>Horas Acumuladas: </label>
                            <h5 id="txtHorasDocentePorMes" class="form-check"></h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
