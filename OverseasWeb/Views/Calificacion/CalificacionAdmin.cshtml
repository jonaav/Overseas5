
@{
    ViewData["Title"] = "Calificacion";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container mt-3" id="viewCalificacionAdmin">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <partial name="~/Views/Inscripcion/_BuscadorCursoInscripcion.cshtml">
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-7">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="form-check-inline p-2">
