

@{
    ViewData["Title"] = "ListarTraducciones";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div class="container-fluid">
        <!-- Table -->
        <div id="containerListadoTraduccion">
            <div class="row">
                <div class="col-md-12">
                    <div class="containerListadoTraduccion">
                        <div class="card">
                            <div class="card-body">                            
                                <div class="form-row">
                                        <div class="col-md-2">
                                            <button type="button" id="btnAgregarTraduccion" class="btn btn-outline-secondary">Nueva Traduccion</button>
                                        </div>       
                                        <div class="col-md-4">
                                            <button onclick="MostrarTraduccionesPendientes()" id="btnTraduccionesPendientes" type="button" class="btn btn-outline-warning">Pendientes</button>
                                            <button onclick="MostrarTraduccionesEntregadas()" id="btnTraduccionesEntregadas" type="button" class="btn btn-outline-success">Entregadas</button>
                                        </div>                                                                                                             
                                </div>
                                <div class="table-responsive ">
                                    <table class="table table-hover table-sm" style="width:100%" id="tablaTraduccion">
                                        <thead>
                                            <tr>
                                                <th>N°</th>
                                                <th>Tipo</th>
                                                <th>Cliente</th>
                                                <th>Detalle</th>
                                                <th>Docente</th>
                                                <th>Fecha Traduccion</th>
                                                <th>Idioma Origen</th>
                                                <th>Idioma Destino</th>
                                                <th></th>                                                
                                            </tr>
                                        </thead>
                                        <tbody id="contenidoTablaTraduccion">
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>
        </div> 
        <div id="containerRegistroTraduccion">
            <partial name="~/Views/Traduccion/_FormTraduccion.cshtml">  
            <partial name="~/Views/Curso/_ModalBuscarDocente.cshtml">        
        </div>       
    </div>

