@model OverseasWeb.Models.ViewModelUsuario;
@{
    ViewData["Title"] = "PerfilUsuario";
    Layout = ViewBag.urlLayout;
}

<div class="container">
    <div class="row m-3">
        <div class="col-7">
            <div class="row">
                <div class="card border-dark col-11">
                    <div class="card-body">
                        <form asp-controller="Usuario" asp-action="CambiarPassword" methdod="post">
                            <div class="col-md">
                                <div class="form-row">
                                    <div class="form-group col-md">
                                        <label> Nombre de usuario: </label>
                                        <strong>@Model.Username</strong>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md">
                                        <label> Antigua contraseña: </label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Antigua contraseña" maxlength="45" required>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md">
                                        <label> Nueva contraseña: </label>
                                        <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nueva contraseña" maxlength="45" required>
                                        <span asp-validation-for="NewPassword" class="alert-validacion"></span>
                                    </div>
                                </div>

                                <div class="form-row">
                                    <div class="form-group col-md">
                                        <label> Confirmar nueva contraseña: </label>
                                        <input asp-for="NewPasswordConfirm" type="password" class="form-control" placeholder="Nueva contraseña" maxlength="45" required>
                                        <span asp-validation-for="NewPasswordConfirm" class="alert-validacion"></span>
                                    </div>
                                </div>

                                <div asp-validation-summary="All" class="alert-validacion"></div>

                                <div class="form-group">
                                    <input type="submit" class="btn btn-info" value="Guardar">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>


</div>