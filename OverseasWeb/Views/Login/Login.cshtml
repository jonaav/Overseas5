


@model ViewModelLogin

@{ 
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="login">
    <h1>Inicie sesion</h1>
    <form asp-controller="Login" asp-action="Login" methdod="post">
        <div class="form-group col">
            <label>Usuario</label>
            <input asp-for="Username" type="email"placeholder="Ingrese su correo" />
            @*<span asp-validation-for="Username" class="alert-validacion"></span>*@
        </div>
        <div class="form-group col">
            <label>Contraseña</label>
            <input asp-for="Password" type="password" placeholder="Ingrese su contraseña" />
            @*<span asp-validation-for="Password" class="alert-validacion"></span>*@
        </div>
        <div asp-validation-summary="All" class="alert-validacion"></div>
        <div class="form-group">
            <input type="submit" value="Iniciar sesión" />
        </div>
    </form>
</div>