

@{
    ViewData["Title"] = "ListarCursosRegular";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="ViewCursosRegulares" class="container mt-3">
    <ul class="nav nav-pills nav-fill">
        <li class="nav-item">
            <button id="btnInglesGeneral" onclick="SelecInglesGeneral()" class="btn btn-outline-info">
                Inglés General
            </button>
        </li>
        <li class="nav-item">
            <button id="btnInglesNiños" onclick="SelecInglesNiños()" class="btn btn-outline-info">
                Inglés Para Niños
            </button>
        </li>
        <li class="nav-item">
            <button id="btnExamInter" onclick="SelecExamInter()" class="btn btn-outline-info">
                P. Exam. Internacional
            </button>
        </li>
        <li class="nav-item">
            <button id="btnOtrosIdiomas" onclick="SelecOtrosIdiomas()" class="btn btn-outline-info">
                Otros Idiomas
            </button>
        </li>
    </ul>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-row">
                        <a type="button" asp-action="RegistrarCurso" asp-controller="Curso" rel="tooltip" title="Agregar" class="btn btn-info">Nuevo curso</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover" id="tablaCursosRegular">
                            <thead id="cabeceraTablaCursosRegular">
                                <tr>
                                    <th>Nombre</th>
                                    <th>Idioma</th>
                                    <th>Nivel</th>
                                    <th>Ciclo</th>
                                    <th id="detalleCurso">Detalle</th>
                                    <th>Docente</th>
                                    <th>Periodo</th>
                                    <th>Estado</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="contenidoTablaCursosRegular">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<div id="containerRegistroCurso">
    <partial name="~/Views/Curso/_FormCurso.cshtml">
    <partial name="~/Views/Curso/_ModalBuscarDocente.cshtml">
</div>

<div id="containerRegistroHorario">
    <partial name="~/Views/Horario/CrearHorario.cshtml">
</div>










