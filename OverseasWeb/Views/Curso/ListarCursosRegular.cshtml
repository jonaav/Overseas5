@{
    ViewData["Title"] = "ListarCursosRegular";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="ViewCursosRegulares" class="container mt-3">
    <div id="containerCursosRegulares" class="container">
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <button id="btnInglesGeneral" onclick="SelecInglesGeneral()" class="btn btn-outline-info">
                    Inglés General
                </button>
            </li>
            <li class="nav-item">
                <button  id="btnInglesNiños" onclick="SelecInglesNiños()" class="btn btn-outline-info">
                    Inglés Para Niños
                </button>
            </li>
            <li class="nav-item">
                <button id="btnExamInter" onclick="SelecExamInter()" class="btn btn-outline-info">
                    P. Exam. Internacional
                </button>
            </li>
            <li class="nav-item">
                <button id="btnOtrosIdiomas" onclick="SelecOtrosIdiomas()" class="btn btn-outline-info">
                    Otros Idiomas
                </button>
            </li>
        </ul>

        <div id="containerListadoCurso">        
            <div class="row mt-4">
                <div class="col-md-10">
                    <div class="containerListadoCurso">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-outline-secondary" onclick="MostrarFormCurso()" rel="tooltip" title="Agregar">Nuevo curso</button>
                                    </div>    
                                    <div class="col-md-4">
                                        <button id="btnCursosHabilitados" onclick="MostrarCursosHabilitados()" type="button" class="btn btn-outline-success" rel="tooltip" title="Agregar">Habilitados</button>
                                        <button id="btnCursosDeshabilitados" onclick="MostrarCursosDeshabilitados()" type="button" class="btn btn-outline-danger" rel="tooltip" title="Agregar">Deshabilitados</button>
                                    </div>                                                                  
                                </div>
                                <div class="table-responsive">
                                    <table class="table table-hover" id="tablaCursosRegular">
                                        <thead id="cabeceraTablaCursosRegular">
                                            <tr>                                            
                                                <th>Idioma</th>
                                                <th>Nivel</th>
                                                <th>Ciclo</th>
                                                <th id="cabeceraDetalleCursoRegular">-</th>
                                                <th>Docente</th>
                                                <th>Periodo</th>                                                
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody id="contenidoTablaCursosRegular">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>

    <div id="containerFormCurso">
        <partial name="~/Views/Curso/_FormCurso.cshtml">
        <partial name="~/Views/Curso/_ModalBuscarDocente.cshtml">
    </div>

    <div id="containerFormHorario">
        <partial name="~/Views/Horario/CrearHorario.cshtml">
    </div>



</div>









