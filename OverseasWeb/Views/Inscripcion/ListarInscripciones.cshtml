                                        <tr>
                                            <th>DNI</th>
                                            <th>APELLIDOS</th>
                                            <th>NOMBRES</th>
                                            <th>FECHA INSCRIPCION</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody id="dataInscripciones">
                                    </tbody>
                                </table>
                            </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>



